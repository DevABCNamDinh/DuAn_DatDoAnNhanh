<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DuAn_DoAnNhanh.Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DuAn_DoAnNhanh.Client.styles.css" asp-append-version="true" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
        }

        .sidebar {
            width: 200px;
            background-color: #2c3e50; /* Màu nền của menu */
            color: white;
            padding: 20px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 0;
            }

                .sidebar a:hover {
                    background-color: #34495e;
                }

        .main-content {
            margin-left: 200px;
            padding-top: 80px; /* Khoảng trống để tránh bị chồng lên header */
            width: calc(100% - 200px);
        }

        header {
            background-color: #2c3e50; /* Màu nền của header giống màu menu */
            color: white;
            padding: 15px;
            position: fixed;
            top: 0;
            left: 200px;
            width: calc(100% - 200px);
            z-index: 1000; /* Đảm bảo header luôn nằm trên các thành phần khác */
            text-align: center;
        }

        .navbar .nav-link {
            color: white !important; /* Màu chữ của các liên kết trong header */
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Menu</h2>
        <a href="#">Đơn hàng</a>
        <a asp-action="GetAll" asp-controller="Product">Sản phẩm</a>
        <a asp-action="GetAll" asp-controller="Combo">Combo</a>
    </div>

    <div class="main-content">
        <header>
            <h3>Quản lý</h3>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - DuAn_DoAnNhanh.Client - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
