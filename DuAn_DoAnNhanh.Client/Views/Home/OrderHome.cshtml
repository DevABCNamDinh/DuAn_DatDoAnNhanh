<main>
    <section id="uudai" class="py-3">
        <div class="container">
            <h2>Ưu đãi</h2>
            @await Component.InvokeAsync("Endow")


        </div>
    </section>
    
    <section id="sanpham" class="py-3">
        <div class="container">
            <h2>Gà rán</h2>
            @await Component.InvokeAsync("Product",new{name ="Gà"})
        </div>
    </section>
    <section id="burger" class="py-3">
        <div class="container">
            <h2>Burger</h2>
            @await Component.InvokeAsync("Product", new { name = "Burger" })
        </div>
    </section>
    <section id="miy" class="py-3">
        <div class="container">
            <h2>Mì ý</h2>
            @await Component.InvokeAsync("Product", new { name = "Mì" })
        </div>
    </section>
    <section id="combo" class="py-3">
        <div class="container">
            <h2>Combo</h2>
            @await Component.InvokeAsync("Combo")
        </div>
    </section>
    <section id="all" class="py-3">
        <div class="container">
            <h2>Tất cả sản phẩm</h2>
            @await Component.InvokeAsync("Product")
            @await Component.InvokeAsync("Combo")

        </div>
    </section>
</main>