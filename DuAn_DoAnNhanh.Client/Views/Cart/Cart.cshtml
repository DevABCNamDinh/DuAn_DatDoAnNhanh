 @model IEnumerable<DuAn_DoAnNhanh.Data.Entities.CartItem> 
@{
    decimal totalCartPrice = 0;
}

<div class="container mt-5">
    <h2 class="mb-4">Giỏ hàng của bạn</h2>
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Giỏ hàng của bạn trống.
            <a href="@Url.Action("Index", "Product")">Quay lại mua sắm</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table class="table table-bordered">
                       @*  <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead> *@
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var totalItemPrice = item.Product.Price * item.Quantity;
                                totalCartPrice += totalItemPrice;

                                <tr>
                                    <td style="width: 15%;">
                                        <img src="@item.Product.ImageUrl" @* alt="@item.Product.Title" *@ class="img-fluid" style="max-height: 100px;" />
                                    </td>
                                    @*  <td style="vertical-align: middle;">
                            @item.Book.Title
                            </td> *@
                                    <td style="vertical-align: middle;">
                                        @item.Product.Price.ToString("C")
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <form method="post" action="@Url.Action("UpdateCartItem", "Cart", new { cartItemId = item.CartItemID, quantity = item.Quantity })" class="d-inline">
                                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control d-inline w-auto" />
                                            @* <button type="submit" class="btn btn-sm btn-secondary">Update</button> *@
                                        </form>
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @totalItemPrice.ToString("C")
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <form method="post" action="@Url.Action("RemoveCartItem", "Cart", new { cartItemId = item.CartItemID })" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
           @*  <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Order Summary</h4>
                        <p class="card-text">Items: @Model.Sum(item => item.Quantity)</p>
                        <p class="card-text">Total: @totalCartPrice.ToString("C")</p>
                        <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary btn-lg btn-block">Proceed to Checkout</a>
                        <form method="post" action="@Url.Action("ClearCart", "Cart")" class="mt-3">
                            <button type="submit" class="btn btn-warning btn-block">Clear Cart</button>
                        </form>
                    </div>
                </div>
            </div> *@
        </div>
    }
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    </div>
