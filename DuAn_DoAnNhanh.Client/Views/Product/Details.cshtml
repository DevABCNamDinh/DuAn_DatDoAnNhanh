@model DuAn_DoAnNhanh.Data.Entities.Product

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Product</h4>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid rounded" style="height: 200px; object-fit: cover;">
            </div>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Product Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

          @*       <dt class="col-sm-3 font-weight-bold">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
 *@
                @* <dt class="col-sm-3 font-weight-bold">Quantity</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd> *@

                <dt class="col-sm-3 font-weight-bold">Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price) VND</dd>

                <dt class="col-sm-3 font-weight-bold">Creation Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreteDate)</dd>

                <dt class="col-sm-3 font-weight-bold">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
            </dl>
            <form method="post" action="@Url.Action("AddToCart", "Cart"@* , new { ProductId = Model.ProductID } *@)">
                @* <p class="card-title style=" style="color: red;"><b>@product.Price.ToString("N0") đ</b></p> *@
                <input type="hidden" asp-for="@Model.ProductID"></input>
                 <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" class="form-control"  id="quantity" name="quantity"  @* value="1" min="1" max="@Model.Quantity" *@  />
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
            </form>
 
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            } 
        </div>
        <div class="card-footer text-end">
           @*  <a asp-action="Edit" asp-route-id="@Model?.ProductID" class="btn btn-warning me-2">Edit</a> *@
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
